<Window x:Class="SmartCaraTest.MultiWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartCaraTest" xmlns:controls="clr-namespace:SmartCaraTest.controls"
        mc:Ignorable="d"
        Title="스마트카라" Height="900" Width="1850" WindowStartupLocation="CenterOwner">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="205"/>
                <RowDefinition Height="205"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="900"/>
                <ColumnDefinition Width="900"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Height="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="5" x:Name="Version" FontSize="16" Content="Exit" Visibility="Collapsed"/>
            </Grid>
            <controls:ChannelItem Grid.Row="2" Grid.Column="1" x:Name="Item1"/>
            <controls:ChannelItem Grid.Row="2" Grid.Column="2" x:Name="Item2"/>
            <controls:ChannelItem Grid.Row="3" Grid.Column="1" x:Name="Item3"/>
            <controls:ChannelItem Grid.Row="3" Grid.Column="2" x:Name="Item4"/>
            <controls:OxyView x:Name="Chart" Grid.Row="4" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3"/>
        </Grid>
    </ScrollViewer>
</Window>

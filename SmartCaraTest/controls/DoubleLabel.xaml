<UserControl x:Class="SmartCaraTest.controls.DoubleLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartCaraTest.controls"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="230">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label VerticalContentAlignment="Center" FontWeight="Bold" HorizontalContentAlignment="Center" Foreground="Black" BorderBrush="#AAA" BorderThickness="1" x:Name="label" Background="#6503BDFD"/>
        <Label Background="#FFF" Grid.Column="1" BorderBrush="#AAA" BorderThickness="1" x:Name="cont"/>
    </Grid>
</UserControl>

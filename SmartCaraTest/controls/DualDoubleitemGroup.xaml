<UserControl x:Class="SmartCaraTest.controls.DualDoubleitemGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartCaraTest.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="#AAA" BorderThickness="0.5">
        <Grid Margin="10,0 10, 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Padding="0" Grid.ColumnSpan="3" x:Name="Title" FontWeight="Black" Foreground="Black" FontSize="13"/>
            <Label Padding="0" Grid.Row="3" HorizontalContentAlignment="Center" x:Name="Item1Title" FontWeight="Black" Foreground="Black" FontSize="16"/>
            <Label Padding="0" VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="3" FontSize="16" x:Name="Value11" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Right"/>
            <Label Padding="0" VerticalContentAlignment="Center" Grid.Column="3" Grid.Row="3" FontSize="16" x:Name="Value12" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Right"/>
            <Label Padding="0" x:Name="Header1Text" Grid.Row="2" Grid.Column="1" FontSize="15" FontWeight="Black" HorizontalContentAlignment="Center" HorizontalAlignment="Center"/>
            <Label Padding="0" x:Name="Header2Text" Grid.Row="2" Grid.Column="3" FontSize="15" FontWeight="Black" HorizontalContentAlignment="Center" HorizontalAlignment="Center"/>
            <Label Padding="0" Grid.Row="5" HorizontalContentAlignment="Center" x:Name="Item2Title" FontWeight="Black" Foreground="Black" FontSize="17"/>
            <Label Padding="0" VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="5" FontSize="16" x:Name="Value21" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Right"/>
            <Label Padding="0" VerticalContentAlignment="Center" Grid.Column="3" Grid.Row="5" FontSize="16" x:Name="Value22" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Right"/>
        </Grid>
    </Border>
</UserControl>

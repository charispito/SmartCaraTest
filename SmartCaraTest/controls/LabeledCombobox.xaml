<UserControl x:Class="SmartCaraTest.controls.LabeledCombobox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartCaraTest.controls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label FontWeight="Black" BorderBrush="#AAA" BorderThickness="1" x:Name="label" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <ComboBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1" BorderBrush="#AAA" BorderThickness="1" x:Name="box"/>
    </Grid>
</UserControl>

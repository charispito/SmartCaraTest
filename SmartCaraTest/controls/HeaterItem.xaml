<UserControl x:Class="SmartCaraTest.controls.HeaterItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartCaraTest.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="#000" BorderThickness="0.5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label FontSize="11" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="Black" BorderBrush="#AAA" BorderThickness="1" x:Name="label" Background="#BBB"/>
            <Label HorizontalContentAlignment="Center" Padding="0" VerticalContentAlignment="Center" Background="#FFF" FontSize="11" Grid.Column="1" BorderBrush="#AAA" BorderThickness="0,1,1,1" x:Name="cont"/>
            <Label HorizontalContentAlignment="Center" Padding="0" VerticalContentAlignment="Center" Background="#FFF" FontSize="11" Grid.Column="2" BorderBrush="#AAA" BorderThickness="0,1,1,1" x:Name="cont2"/>
        </Grid>
    </Border>
</UserControl>

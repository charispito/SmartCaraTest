<UserControl x:Class="SmartCaraTest.controls.HeaterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartCaraTest.controls"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="160" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="열풍" FontSize="8" FontWeight="Bold"/>
        <local:HeaderView Grid.Column="1" Grid.ColumnSpan="2" Height="17" Title="열풍 제어" Text="배기 온도"/>
        <local:HeaterItem x:Name="Heater1" Grid.Row="1" Height="20" Grid.ColumnSpan="3" Margin="0, 2, 0, 0" Title="열풍 온도 Step1"/>
        <local:HeaterItem x:Name="Heater2" Grid.Row="2" Height="20" Grid.ColumnSpan="3" Margin="0, 2, 0, 0" Title="열풍 온도 Step2"/>
        <local:HeaterItem x:Name="Heater3" Grid.Row="3" Height="20" Grid.ColumnSpan="3" Margin="0, 2, 0, 0" Title="열풍 온도 Step3"/>
        <local:HeaterItem x:Name="Heater4" Grid.Row="4" Height="20" Grid.ColumnSpan="3" Margin="0, 2, 0, 0" Title="열풍 온도 Step4"/>
        <local:HeaterItem x:Name="Heater5" Grid.Row="5" Height="20" Grid.ColumnSpan="3" Margin="0, 2, 0, 0" Title="열풍 온도 Step5"/>
        <local:HeaterItem x:Name="Heater6" Grid.Row="6" Height="20" Grid.ColumnSpan="3" Margin="0, 2, 0, 0" Title="열풍 온도 Step6"/>
        <local:HeaterItemSingle x:Name="Heater7" Grid.Row="7" Height="20" Grid.ColumnSpan="3" Margin="0, 2, 0, 0" Title="열풍 FAN SPEED"/>
        <local:HeaterItemSingle x:Name="Heater8" Grid.Row="8" Height="20" Grid.ColumnSpan="3" Margin="0, 2, 0, 0" Title="열풍 히터 온도"/>
    </Grid>
</UserControl>

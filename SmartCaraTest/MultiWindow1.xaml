<Window x:Class="SmartCaraTest.MultiWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartCaraTest" xmlns:controls="clr-namespace:SmartCaraTest.controls"
        mc:Ignorable="d"
        Title="스마트카라" Height="900" Width="1850" WindowStartupLocation="CenterScreen">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="205"/>
                <RowDefinition Height="205"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="900"/>
                <ColumnDefinition Width="900"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Height="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <WrapPanel Grid.Column="1" Grid.ColumnSpan="2">
                    <Label Content="Save File Name " FontSize="17" VerticalContentAlignment="Center" FontWeight="Black"/>
                    <TextBox FontSize="18" FontWeight="Black" Width="678" VerticalContentAlignment="Center" x:Name="FileName"/>
                </WrapPanel>
                <CheckBox Content="바탕화면 저장" FontSize="17" VerticalContentAlignment="Center" HorizontalAlignment="Right" Margin="10, 0" x:Name="SaveCheck"/>
                <Label Grid.Column="5" x:Name="VersionText" FontSize="17" HorizontalContentAlignment="Right" Margin="0, 0, 20, 0"/>
                <Button Grid.Column="4" x:Name="StopButton" Width="100" Content="정지"/>
                <Button Grid.Column="3" x:Name="StartButton" Width="100" Content="시작" Margin="10, 0"/>
                <TextBox Visibility="Hidden" x:Name="FileNameBox" VerticalContentAlignment="Center" Grid.Column="2" Width="700" BorderBrush="Black" BorderThickness="1" Margin="10, 0"/>
                <Label Visibility="Hidden" Grid.Column="1" Content="Save File Name" FontSize="16"/>
            </Grid>
            <controls:ChannelItem Grid.Row="2" Grid.Column="1" x:Name="Item1"/>
            <controls:ChannelItem Grid.Row="2" Grid.Column="2" x:Name="Item2"/>
            <controls:ChannelItem Grid.Row="3" Grid.Column="1" x:Name="Item3"/>
            <controls:ChannelItem Grid.Row="3" Grid.Column="2" x:Name="Item4"/>
            <controls:OxyView  x:Name="Chart" Grid.Row="4" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3"/>
        </Grid>
    </ScrollViewer>
</Window>
